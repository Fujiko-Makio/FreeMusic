<%= render "shared/header" %>

  <div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= "作曲者: #{@music.user.nickname}" %>
    </h2>
    <div class="item-price-box">
      <span class="item-price">
        <%= "曲名: #{@music.musics_name}" %>
      </span>
    </div>
  <% if user_signed_in? %>
    <% if current_user.id == @music.user_id %>
      <%= link_to "編集する", edit_music_path, method: :get, class: "item-red-btn" %>
      <p class="or-text">or</p>
      <%= link_to "削除する", music_path, method: :delete, class:"item-destroy" %>
      <audio src="<%= rails_blob_path(@music.sound) %>" type="audio/mp3" controls></audio>
    <% else %>
      <audio src="<%= rails_blob_path(@music.sound) %>" type="audio/mp3" controls></audio>
    <% end %>
  <% end %>
    <div class="item-explain-box"> 
    </div>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">曲の説明</th>
          <td class="detail-value"><%= @music.description %></td>
        </tr>
        <tr>
          <th class="detail-item">ジャンル</th>
          <td class="detail-value"><%= @music.genre.name %></td>
        </tr>
        <tr>
          <th class="detail-item">雰囲気</th>
          <td class="detail-value"><%= @music.image.name %></td>
        </tr>
      </tbody>
    </table>
    <div class="option">
      <div class="favorite-btn">
        <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
        <span>お気に入り 0</span>
      </div>
    </div>
  </div>
  <%# /商品の概要 %>
  <a href="#" class="another-item"><%= @music.genre.name %>をもっと見る</a>
</div>

<%= render "shared/footer" %>