<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      きっと見つかる
    </h2>
    <p class='service-explain'>
      気に入った音楽をダウンロード
    </p>
  <% if user_signed_in? %>
    <p class='post-music'>楽曲の投稿は
  <%= link_to 'こちら', new_music_path %>
    </p>
  <% end %>
  </div>
  <%# /画面上部 %>


  <%#= "一覧表示" %>
  <div class='item-contents'>
    <h2 class='title'>- 新規楽曲、BGM一覧 -</h2>
    <%= link_to '新規投稿順 ⇨', "#", class: "subtitle" %>
    <ul class='item-lists'>
    
      <% @musics.each do |music| %>
        <li class="list">
          <%= link_to music_path(music.id) do %>
            <div class='item-img-content'>
              <%= image_tag "radio.png", :size => '100x100' %>
            </div>
              <div class='item-info'>
                <h3 class='item-name'>
                  <%= "曲名: #{music.musics_name}" %>
                </h3>
                <h2 class="items-name">
                  <%= "作曲者: #{music.user.nickname}" %>
                </h2>
              </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <%# "一覧表示" %>
</div>
<%= render "shared/footer" %>