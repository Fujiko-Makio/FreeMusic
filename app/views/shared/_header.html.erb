<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <a href="/">
      <h1>MusicTrade</h1>
    </a>
  </div>
  <div class='nav'>
  <%= search_form_for @p, url: products_search_path do |f| %>
    <ul class='lists-left'>
      <li><%= f.collection_select :genre_id_eq, Genre.where.not(id: 0), :id, :name,  include_blank: 'ジャンルで探す', class: "category-list" %></li>
      <li><%= class: "brand-list" %></li>
    </ul>
  <% end %>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to "ようこそ！ #{current_user.nickname} さん", "/users/#{current_user.id}", id: "lists", class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>